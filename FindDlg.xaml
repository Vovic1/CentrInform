        <Label Content="Select Field" HorizontalAlignment="Left" Height="43" Margin="55,54,0,0" VerticalAlignment="Top" Width="209"/>
        <ComboBox x:Name="cmbFields" HorizontalAlignment="Left" Height="30" Margin="340,55,0,0" VerticalAlignment="Top" Width="200"/>
